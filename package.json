{
  "name": "breadboardai",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:cloud": "vite --port 5173 --host",
    "dev:debug": "PORT=5173 breadboard debug src/boards/prompt-to-post.ts --watch",
    "server:cloud": "tsx src/bridge/server.ts",
    "start:all": "npm run dev:cloud & npm run server:cloud",
    "build": "vite build",
    "preview": "vite preview",
    "editor": "npm run sync-boards && cd tools/editor && npm run dev",
    "bridge": "mkdir -p node_modules/@breadboard-ai node_modules/@google-labs && cp -Rn tools/editor/node_modules/@breadboard-ai/. node_modules/@breadboard-ai/ 2>/dev/null || true && cp -Rn tools/editor/node_modules/@google-labs/. node_modules/@google-labs/ 2>/dev/null || true && (mkdir -p node_modules/@breadboard-ai/build/node_modules/@google-labs && ln -snf ../../../@google-labs/breadboard node_modules/@breadboard-ai/build/node_modules/@google-labs/breadboard || true) && NODE_OPTIONS='--max-old-space-size=4096' tsx src/bridge/server.ts",
    "run-graph": "tsx src/scripts/run_graph.mts",
    "sync-boards": "tsx src/scripts/serialize_boards.ts",
    "verify": "tsx .agent/skills/visual_verification/scripts/capture_screenshot.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@remotion/bundler": "^4.0.417",
    "@remotion/cli": "^4.0.417",
    "@remotion/player": "^4.0.417",
    "@remotion/renderer": "^4.0.417",
    "@types/express": "^5.0.6",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "dotenv": "^17.2.3",
    "esbuild-wasm": "^0.27.3",
    "express": "^5.2.1",
    "mermaid": "^11.12.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "remotion": "^4.0.417"
  },
  "devDependencies": {
    "@breadboard-ai/build": "^0.12.2",
    "@google-labs/agent-kit": "^0.18.0",
    "@google-labs/breadboard": "^0.35.0",
    "@google-labs/breadboard-cli": "^0.13.1",
    "@google-labs/core-kit": "^0.19.1",
    "@lit-labs/signals": "^0.2.0",
    "@lit/context": "^1.1.6",
    "@lit/task": "^1.0.3",
    "@material/web": "^2.4.1",
    "@playwright/test": "^1.58.0",
    "ajv": "^8.17.1",
    "esbuild": "^0.27.2",
    "lit": "^3.3.2",
    "mime": "^4.1.0",
    "tsx": "^4.21.0",
    "vite": "^6.4.1",
    "zod": "3.22.3"
  }
}